<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Displayquizs">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <Pane prefHeight="70.0" prefWidth="800.0" styleClass="header">
            <VBox alignment="CENTER" prefHeight="70.0" prefWidth="800.0" spacing="5.0">
                <Text styleClass="header-text" text="Liste des quizs" wrappingWidth="209.8031005859375" />
                <Pane prefHeight="1.0" prefWidth="800.0" styleClass="header-divider" />
            </VBox>
        </Pane>

        <VBox alignment="CENTER" layoutY="70.0" spacing="20.0">
            <TableView fx:id="quiztable" prefHeight="400.0" prefWidth="818.0">
                <columns>
                    <TableColumn fx:id="idquiz" maxWidth="100.0" prefWidth="57.599974036216736" text="ID" />
                    <TableColumn fx:id="idtitle" prefWidth="152.79999542236328" text="Title" />
                    <TableColumn fx:id="iddesc" prefWidth="503.1999206542969" text="Description" />
                    <TableColumn fx:id="idscore" minWidth="0.0" prefWidth="106.39990234375" text="Score" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="insertbtn" onAction="#insert" styleClass="action-button" text="Add" />
                <Button fx:id="updatebtn" onAction="#update" styleClass="action-button" text="Edit" />
                <Button fx:id="deletebtn" onAction="#delete" prefHeight="50.0" prefWidth="111.0" styleClass="action-button" text="Delete" />
                <Button fx:id="openbtn" onAction="#displayquestions" prefHeight="50.0" prefWidth="157.0" styleClass="action-button" text="Open Quiz" />
               <TextField fx:id="filterField" prefHeight="30.0" prefWidth="163.0" promptText="Filter by title">
               <font>
                  <Font size="23.0" />
               </font></TextField>
                    </HBox>

        </VBox>
    </children>
</AnchorPane>
