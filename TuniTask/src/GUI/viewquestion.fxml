<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Viewquestion">
    <children>
        <Label layoutX="43.0" layoutY="43.0" text="Question:" />
        <Label fx:id="questionTextLabel" layoutX="100.0" layoutY="43.0" />
        <ListView fx:id="answersListView" layoutX="43.0" layoutY="100.0" prefHeight="200" prefWidth="200" AnchorPane.leftAnchor="43.0" AnchorPane.rightAnchor="357.0" AnchorPane.topAnchor="100.0" />
        <Button fx:id="checkAnswerButton" layoutX="43.0" layoutY="320.0" mnemonicParsing="false" onAction="#checkAnswer" text="Check Answer" />
        <Button fx:id="nextButton" layoutX="171.0" layoutY="320.0" mnemonicParsing="false" onAction="#showScore" text="Show score" />
        <Button layoutX="299.0" layoutY="320.0" mnemonicParsing="false" onAction="#backToQuestons" text="Back to Questions" />
    </children>
</AnchorPane>
