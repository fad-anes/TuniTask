<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Displayquizs">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <Pane prefHeight="70.0" prefWidth="800.0" styleClass="header">
            <VBox alignment="CENTER" prefHeight="70.0" prefWidth="800.0" spacing="5.0">
                <Text styleClass="header-text" text="Liste des quizs" />
                <Pane prefHeight="1.0" prefWidth="800.0" styleClass="header-divider" />
            </VBox>
        </Pane>

        <VBox alignment="CENTER" layoutY="70.0" spacing="20.0">
            <TableView fx:id="quiztable" prefHeight="400.0" prefWidth="818.0">
                <columns>
                    <TableColumn fx:id="idquiz" maxWidth="100.0" prefWidth="100.0" text="ID" />
                    <TableColumn fx:id="idtitle" prefWidth="300.0" text="Title" />
                    <TableColumn fx:id="iddesc" prefWidth="200.0" text="Description" />
                    <TableColumn fx:id="idscore" minWidth="0.0" prefWidth="99.20001220703125" text="Score" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="insertbtn" onAction="#insert" styleClass="action-button" text="Add" />
                <Button fx:id="updatebtn" onAction="#update" styleClass="action-button" text="Edit" />
                <Button fx:id="deletebtn" onAction="#delete" styleClass="action-button" text="Delete" />
                <Button fx:id="openbtn" onAction="#displayquestions" styleClass="action-button" text="Open Quiz" />
                    </HBox>
        </VBox>
    </children>
</AnchorPane>
