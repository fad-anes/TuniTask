<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Viewquestion">
    <children>
        <Label layoutY="43.0" prefHeight="31.0" prefWidth="109.0" text="Question:">
         <font>
            <Font size="21.0" />
         </font></Label>
        <Label fx:id="questionTextLabel" layoutX="100.0" layoutY="43.0" prefHeight="18.0" prefWidth="453.0" AnchorPane.leftAnchor="120.0" AnchorPane.topAnchor="50.0" />
        <ListView fx:id="answersListView" layoutX="47.0" layoutY="100.0" prefHeight="200" prefWidth="517.0" AnchorPane.leftAnchor="47.0" AnchorPane.rightAnchor="36.0" AnchorPane.topAnchor="100.0" />
        <Button fx:id="checkAnswerButton" layoutX="47.0" layoutY="320.0" mnemonicParsing="false" onAction="#checkAnswer" prefHeight="42.0" prefWidth="118.0" style="-fx-background-color: #1ea6b4;" text="Check Answer" textFill="#531a1a">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
