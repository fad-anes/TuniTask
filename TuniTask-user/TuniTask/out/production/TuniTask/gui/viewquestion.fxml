            <Cursor fx:constant="HAND" />
         </cursor></Button>
        <Button fx:id="nextButton" layoutX="232.0" layoutY="320.0" mnemonicParsing="false" onAction="#showScore" prefHeight="42.0" prefWidth="148.0" style="-fx-background-color: #1ea6b4;" text="Show score" textFill="#531a1a">
